    open = not open
    menuFrame.Visible = open
end)

-- Drag n√∫t nh·ªè
local dragging, dragInput, dragStart, startPos
local function update(input)
    local delta = input.Position - dragStart
    toggleButton.Position = UDim2.new(
        startPos.X.Scale, startPos.X.Offset + delta.X,
        startPos.Y.Scale, startPos.Y.Offset + delta.Y
    )
end
toggleButton.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = toggleButton.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then dragging = false end
        end)
    end
end)
toggleButton.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
        dragInput = input
    end
end)
UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then update(input) end
end)

-- Drag menu qua ti√™u ƒë·ªÅ
local menuDragging, menuDragInput, menuDragStart, menuStartPos
local function updateMenu(input)
    local delta = input.Position - menuDragStart
    menuFrame.Position = UDim2.new(
        menuStartPos.X.Scale, menuStartPos.X.Offset + delta.X,
        menuStartPos.Y.Scale, menuStartPos.Y.Offset + delta.Y
    )
end
title.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        menuDragging = true
        menuDragStart = input.Position
        menuStartPos = menuFrame.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then menuDragging = false end
        end)
    end
end)
title.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
        menuDragInput = input
    end
end)
UserInputService.InputChanged:Connect(function(input)
    if input == menuDragInput and menuDragging then updateMenu(input) end
end)

-- üß≠ C·∫•p 4 - getCoins() t·ª± c·∫≠p nh·∫≠t khi c√≥ coin spawn/despawn, g·∫ßn nh∆∞ kh√¥ng lag
local coinCache = {}
local lastScan = 0
local scanInterval = 5 -- ch·ªâ qu√©t l·∫°i n·∫øu kh√¥ng c√≥ s·ª± ki·ªán spawn trong 5s

-- üß© H√†m qu√©t coin ban ƒë·∫ßu
local function scanCoins()
    local coins = {}
    for _, map in pairs(workspace:GetChildren()) do
        if map:IsA("Model") and not map:FindFirstChildWhichIsA("Humanoid") then
            for _, obj in pairs(map:GetDescendants()) do
                if obj:IsA("BasePart") and obj:FindFirstChildWhichIsA("TouchTransmitter") then
                    table.insert(coins, obj)
                end
            end
        end
    end
    return coins
end

-- üéØ H√†m l·∫•y coin, d√πng cache th√¥ng minh
local function getCoins()
    if tick() - lastScan > scanInterval or #coinCache == 0 then
        coinCache = scanCoins()
        lastScan = tick()
    end
    return coinCache
end

-- ‚ö° T·ª± ƒë·ªông c·∫≠p nh·∫≠t khi c√≥ coin m·ªõi xu·∫•t hi·ªán trong workspace
workspace.DescendantAdded:Connect(function(obj)
    if obj:IsA("BasePart") and obj:FindFirstChildWhichIsA("TouchTransmitter") then
        table.insert(coinCache, obj)
    end
end)

-- üóëÔ∏è T·ª± lo·∫°i coin kh·ªèi cache khi b·ªã nh·∫∑t (x√≥a kh·ªèi workspace)
workspace.DescendantRemoving:Connect(function(obj)
    for i, coin in ipairs(coinCache) do
        if coin == obj then
            table.remove(coinCache, i)
            break
        end
    end
end)
-- T√¨m coin g·∫ßn nh·∫•t d·ª±a tr√™n m·∫£ng getCoins()
local function findNearestCoin()
    local character = LocalPlayer.Character
    if not character then return nil end
    local hrp = character:FindFirstChild("HumanoidRootPart") or character:FindFirstChild("HumanoidRootPart")
    if not hrp then return nil end

    local container = getCoins()
    if not container or #container == 0 then
        -- debug: kh√¥ng t√¨m th·∫•y coin
        -- print("getCoins() tr·∫£ v·ªÅ 0 ph·∫ßn t·ª≠")
        return nil
    end

    local nearest, dist = nil, math.huge
    for _, coin in pairs(container) do
        if coin and coin.Parent and coin:IsDescendantOf(workspace) then
            -- ƒë·∫£m b·∫£o coin c√≤n t·ªìn t·∫°i v√† l√† basepart
            if coin:IsA("BasePart") then
                local ok, cpos = pcall(function() return coin.Position end)
                if ok and cpos then
                    local d = (hrp.Position - cpos).Magnitude
                    if d < dist then
                        dist = d
                        nearest = coin
                    end
                end
            end
        end
    end
    return nearest
end

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- üß† H√†m ki·ªÉm tra xem c√≥ ƒëang trong round th·∫≠t hay kh√¥ng
local function inRound()
    local gui = LocalPlayer:FindFirstChild("PlayerGui")
    if not gui then return false end

    -- GUI Game ch·ªâ xu·∫•t hi·ªán khi ƒëang trong round
    local gameUI = gui:FindFirstChild("MainGUI") and gui.MainGUI:FindFirstChild("Game")

    -- Nh√¢n v·∫≠t ph·∫£i t·ªìn t·∫°i v√† c√≤n s·ªëng
    local character = LocalPlayer.Character
    local humanoid = character and character:FindFirstChildOfClass("Humanoid")
    local alive = humanoid and humanoid.Health > 0

    -- Ph·∫£i c√≥ GUI Game ƒëang b·∫≠t v√† nh√¢n v·∫≠t c√≤n s·ªëng
    return gameUI ~= nil and gameUI.Enabled == true and alive
end

local function moveToCoin(coin)
    local character = LocalPlayer.Character
    if not character then return end
    local hrp = character:FindFirstChild("HumanoidRootPart")
    if not hrp or not coin or not coin.Parent then return end

    local distance = (hrp.Position - coin.Position).Magnitude
    local speed = 20
    local time = math.clamp(distance / speed, 0.5, 10)

    local tween = TweenService:Create(hrp, TweenInfo.new(time, Enum.EasingStyle.Linear), {CFrame = coin.CFrame + Vector3.new(0,3,0)})
    local finished = false
    tween.Completed:Connect(function()
        finished = true
        if coin and coin.Parent then
            coin:Destroy()
        end
    end)
    tween:Play()

    repeat task.wait() until finished
end

local function autoFarm()
    while farming do
        if inRound() then
            local coin = findNearestCoin()
            if coin then
                moveToCoin(coin)
            else
                task.wait(0.1)
            end
        else
            -- Kh√¥ng trong round th√¨ ƒë·ª£i, kh√¥ng farm
            task.wait(1)
        end
    end
end

